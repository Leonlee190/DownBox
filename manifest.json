{
  "manifest_version": 2,

  "name": "Download Box",
  "description": "Extension to manage downloads in a neater way",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo1.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "downloads", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
